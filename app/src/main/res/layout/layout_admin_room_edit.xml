<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/admin_room_room_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        />

    <EditText
        android:id="@+id/admin_room_room_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/admin_room_edit_title_hint"/>

    <EditText
        android:id="@+id/admin_room_room_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/admin_room_room_desc_hint"/>

    <Spinner
        android:id="@+id/admin_room_room_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/admin_room_room_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="@string/admin_room_edit_price_hint"
        />

    <Button
        android:id="@+id/admin_room_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose image"/>

    <Button
        android:id="@+id/admin_room_delete_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete"/>


</LinearLayout>