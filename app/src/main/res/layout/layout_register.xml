<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/background" >




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="@string/register_title"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/register_edit_text_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#f8c291"
                    android:drawableStart="@drawable/baseline_person_24"
                    android:drawablePadding="12sp"
                    android:ems="10"
                    android:hint="@string/register_edit_text_username"
                    android:inputType="text"
                    android:padding="20dp"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/register_edit_text_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#f8c291"
                    android:drawableStart="@drawable/baseline_lock_24"
                    android:drawablePadding="12sp"
                    android:ems="10"
                    android:hint="@string/register_edit_text_password"
                    android:inputType="textPassword"
                    android:padding="20dp"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/register_edit_text_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f8c291"
                    android:layout_margin="10dp"
                    android:drawableStart="@drawable/outline_lock_24"
                    android:drawablePadding="12sp"
                    android:ems="10"
                    android:hint="@string/register_edit_text_confirm"
                    android:inputType="textPassword"
                    android:padding="20dp"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/register_edit_text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#f8c291"
                    android:drawableStart="@drawable/outline_face_6_24"
                    android:drawablePadding="12sp"
                    android:ems="10"
                    android:hint="@string/register_edit_text_name"
                    android:inputType="text"
                    android:padding="20dp"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/register_edit_text_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#f8c291"
                    android:drawableStart="@drawable/outline_local_phone_24"
                    android:drawablePadding="12sp"
                    android:ems="10"
                    android:hint="@string/register_edit_text_phone"
                    android:inputType="phone|number"
                    android:padding="20dp"
                    android:textColor="@color/white" />

            </LinearLayout>

            <Button
                android:id="@+id/register_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#12CBC4"
                android:padding="24dp"
                android:text="@string/register_button"
                android:textSize="24sp" />


</LinearLayout>