<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/admin_user_edit_username"
        android:hint="@string/edit_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/admin_user_edit_password"
        android:hint="@string/admin_edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"/>
    <EditText
        android:id="@+id/admin_user_edit_name"
        android:hint="@string/user_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/admin_user_edit_phone"
        android:hint="@string/admin_edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"/>
    <EditText
        android:id="@+id/admin_user_edit_email"
        android:hint="@string/user_edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        />

    <Spinner
        android:id="@+id/admin_user_edit_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>