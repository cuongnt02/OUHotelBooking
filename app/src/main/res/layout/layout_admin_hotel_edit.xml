<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/admin_hotel_edit_image"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <EditText
        android:id="@+id/admin_hotel_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_hotel_name_here"/>

    <EditText
        android:id="@+id/admin_hotel_edit_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_hotel_description_hint"/>

    <Button
        android:id="@+id/admin_hotel_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete"/>

    <Button
        android:id="@+id/admin_hotel_pick_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="choose image"
        />
    <Button
        android:id="@+id/admin_hotel_room_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit room"/>

</LinearLayout>