<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Material3.TitleSmall"
            android:text="@string/hotel_image_text"
            android:paddingStart="20dp"
            android:paddingTop="5dp"/>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:contentDescription="@string/hotel_image"
            android:id="@+id/admin_hotel_edit_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hotel_name"
            style="@style/TextAppearance.Material3.TitleSmall"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            />
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />
        <EditText
            android:id="@+id/admin_hotel_edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_hotel_name_here"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hotel_description"
            style="@style/TextAppearance.Material3.TitleSmall"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/admin_hotel_edit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_hotel_description_hint"/>


    </LinearLayout>
    <Button
            android:id="@+id/admin_hotel_room_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:text="@string/admin_hotel_room_watch"/>
</FrameLayout>