<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/admin_hotel_edit_image"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <EditText
            android:id="@+id/admin_hotel_edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_hotel_name_here"/>

        <EditText
            android:id="@+id/admin_hotel_edit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_hotel_description_hint"/>


    </LinearLayout>
    <Button
            android:id="@+id/admin_hotel_room_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:text="@string/admin_hotel_room_watch"/>
</FrameLayout>