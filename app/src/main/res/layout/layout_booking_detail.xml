<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/paymentbg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_button"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Thanh toán" />

    <TextView
        android:id="@+id/layout_booking_detail_room_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        tools:text="Tên Phòng: " />

    <TextView
        android:id="@+id/layout_booking_detail_room_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        tools:text="Loại phòng: " />

    <TextView
        android:id="@+id/layout_booking_detail_room_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        tools:text="Giá phòng (Theo ngày): " />

    <TextView
        android:id="@+id/layout_booking_detail_booking_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        tools:text="Giá phòng (Tổng cộng): " />

    <TextView
        android:id="@+id/layout_booking_detail_booking_checkin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        tools:text="Ngày nhận phòng (Check In): " />

    <TextView
        android:id="@+id/layout_booking_detail_booking_checkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        tools:text="Ngày trả phòng (Check out): " />

    <Button
        android:id="@+id/layout_booking_detail_confirm"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:backgroundTint="?android:attr/colorFocusedHighlight"
        android:text="Xác nhận"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>